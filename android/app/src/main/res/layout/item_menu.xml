<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/menu_item_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/menu_item_image"
        android:minWidth="120dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/fontColor"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/menu_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_below="@id/menu_item_title"
        android:layout_toEndOf="@id/menu_item_image"
        android:layout_toStartOf="@id/menu_item_price"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:textSize="13sp"
        />



</RelativeLayout>